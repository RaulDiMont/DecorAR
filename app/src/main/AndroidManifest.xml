<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="diaz.raul.decorar">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SecondGalleryActivity"
            android:label="@string/title_activity_second_gallery"
            android:parentActivityName=".GalleryScrolling"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="diaz.raul.decorar.GalleryScrolling" />
        </activity>
        <activity
            android:name=".GalleryScrolling"
            android:label="@string/title_activity_gallery_scrolling"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="diaz.raul.decorar.MainActivity" />
        </activity>
        <activity
            android:name=".PreviewModelActivity"
            android:label="@string/title_activity_preview_model"
            android:parentActivityName=".SecondGalleryActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="diaz.raul.decorar.SecondGalleryActivity" />
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>